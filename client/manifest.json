{
  // Required
  "manifest_version": 2,
  "name": "Scribe",
  "version": "1.0",

  "description": "Converts raw URLS put into a Gmail composition window to either the images they point to or the title text of the page they point to. Just press F2!",

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources":[
    "listener.js",
    "Autolinker.min.js"
  ]
}
